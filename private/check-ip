import socket
import sys

class Host(object):

    def _get_addr(self):
        for t in socket.getaddrinfo(self.host, 'http', 0, socket.SOCK_STREAM):
            yield t[-1][0]

    def __init__(self, host):
        self.host = host
        self.addr = set(self._get_addr())

    def __str__(self):
        return self.host

def main():
    hosts = ['jwilk.net', 'jwilk.nfshost.com']
    hosts = [Host(h) for h in hosts]
    all_addr = set()
    for host in hosts:
        all_addr |= host.addr
    ok = True
    for addr in sorted(all_addr):
        for host in hosts:
            if addr not in host.addr:
                print(addr, 'not in', host)
                ok = False
    sys.exit(not ok)

if __name__ == '__main__':
    main()

