#!/usr/bin/env bash

# Copyright Â© 2017 Jakub Wilk <jwilk@jwilk.net>
# SPDX-License-Identifier: MIT

set -e -u

hosts='jwilk.net'
schemes='http https'
protos='4'
declare -i ntests=2
if [ -n "$(ip -6 route list match ::)" ]
then
    protos="$protos 6"
    ntests+=$ntests
fi
echo "1..$ntests"
declare -i i=0
for host in $hosts
do
    tmpdir=$(mktemp -d -t jwilk.net.XXXXXX)
    cd "$tmpdir"
    prev_path=
    for proto in $protos
    do
        for scheme in $schemes
        do
            i+=1
            export http_proxy="http://localhost:9"
            export https_proxy="http://localhost:9"
            unset "${scheme}_proxy"
            url="$scheme://$host"
            path="${scheme}-${proto}-${host}"
            context="$i <$url> IPv$proto"
            wget -nv "-$proto" -O "$path" "$url"
            if [ -z "$prev_path" ]
            then
                echo "ok $context"
            else
                diff=$(diff -u "$path" "$prev_path") || true
                if [ -n "$diff" ]
                then
                    # shellcheck disable=SC2001
                    sed -e 's/^/# /' <<< "$diff"
                    echo "not ok $context"
                else
                    echo "ok $context"
                fi
            fi
            prev_path="$path"
        done
    done
    cd /
    rm -rf "$tmpdir"
done

# vim:ts=4 sts=4 sw=4 et
